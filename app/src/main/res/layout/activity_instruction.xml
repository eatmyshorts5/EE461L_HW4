<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:andorid="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="16px"
    android:paddingLeft="16px"
    android:paddingRight="16px"
    android:paddingTop="16px"
    tools:context="com.example.daniel.ee461l_hw4.ActuallyMainActivity">

    <ScrollView
        android:id="@+id/address_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10px">

        <LinearLayout
            android:id="@+id/the_address_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12pt"
                android:text="How to play the game"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:textSize="8pt"
                android:text="This game is simple. Just find the place!\n1. Enter in your guess of the location\n2. You will be given hints. The more you guess the more hints you will get!\n3. You have a heat meter. The closer you get the HOTTER you get!"/>

            <Button
                android:id="@+id/play_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Lets play!"
                android:textStyle="bold"/>


            <Button
                android:id="@+id/home_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Go Home"
                android:textStyle="bold"/>

            </LinearLayout>
    </ScrollView>
</LinearLayout>